{
  "manifest_version": 2,
  "name": "Domain Swapper",
  "version": "0.0.1",
  "description": "Swaps you between dev domain hostnames!",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
      "activeTab",
      "storage",
      "tabs"
  ],
  "page_action": {
    "default_icon": "icons/coffee-32.png",
    "default_title": "Domain Swapper",
    "default_popup": "popup/choose_domain.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }
}
